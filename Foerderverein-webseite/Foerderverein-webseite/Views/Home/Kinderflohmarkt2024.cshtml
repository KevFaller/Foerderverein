@page
@model Foerderverein_webseite.Views.Home.Kinderflohmarkt2024Model

<form method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" required>
    </div>

    <div class="form-group">
        <label for="Vorname">Vorname:</label>
        <input type="text" class="form-control" id="Vorname" name="Vorname" required>
    </div>

    <div class="form-group">
        <label for="Mailadresse">Mailadresse:</label>
        <input type="email" class="form-control" id="Mailadresse" name="Mailadresse" required>
    </div>

    <div class="form-group">
        <label for="AnzahlTische">Anzahl Tische:</label>
        <input type="number" class="form-control" id="AnzahlTische" name="AnzahlTische" required>
    </div>

    <div class="form-group">
        <label>Wählen Sie eine Option:</label>
        <div class="form-check">
            <input type="radio" class="form-check-input" id="MitKuchen" name="KuchenOption" value="MitKuchen">
            <label class="form-check-label" for="MitKuchen">Mit Kuchen</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" id="OhneKuchen" name="KuchenOption" value="OhneKuchen">
            <label class="form-check-label" for="OhneKuchen">Ohne Kuchen</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Formular absenden</button>
</form>
